<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Deketin" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_900</item>
        <item name="colorOnPrimary">@color/grey_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_800</item>
        <item name="colorSecondaryVariant">@color/grey_900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_500</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Deketin.FontMedium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Deketin.FontBold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Theme.Deketin.FontRegular">
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Deketin.TextBold12" parent="Theme.Deketin.FontBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Deketin.TextBold14" parent="Theme.Deketin.FontBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Deketin.TextBold16" parent="Theme.Deketin.FontBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Deketin.TextMedium10" parent="Theme.Deketin.FontMedium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.Deketin.TextMedium12" parent="Theme.Deketin.FontMedium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Deketin.TextMedium14" parent="Theme.Deketin.FontMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Deketin.TextMedium16" parent="Theme.Deketin.FontMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Deketin.TextMedium20" parent="Theme.Deketin.FontMedium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Deketin.TextRegular12" parent="Theme.Deketin.FontRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Deketin.TextRegular14" parent="Theme.Deketin.FontRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Deketin.TextRegular16" parent="Theme.Deketin.FontRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Deketin.ShapeApperanceOverlay.PlaceThumbnail" parent="">
        <item name="cornerSize">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#f2f2f2</item>
    </style>

    <style name="Theme.Deketin.Toolbar.Colored" parent="">
        <item name="android:textColorSecondary">?attr/colorPrimary</item>
        <item name="android:colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Deketin.TextApperance.ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>