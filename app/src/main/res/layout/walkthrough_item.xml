<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wtImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            tools:src="Deketin Tempat" />

        <TextView
            android:id="@+id/wtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Theme.Deketin.TextBold24"
            android:textColor="@color/grey_800"
            android:lineSpacingMultiplier="0"
            android:lineSpacingExtra="36sp"
            tools:text="Deketin Tempat" />

        <TextView
            android:id="@+id/wtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.Deketin.TextRegular14"
            android:textColor="@color/grey_700"
            android:lineSpacingExtra="4sp"
            android:gravity="center"
            tools:text="kelola aktifitas harian serta daftar teman jadi lebih mudah sehingga setiap halnya tertata dengan rapi."/>

    </LinearLayout>

</FrameLayout>